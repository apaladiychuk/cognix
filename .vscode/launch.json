{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src/backend",
            "env": { "PYTHONPATH": "${workspaceFolder}/src/backend" }
        },
        {
            "name": "Chunker",
            "type": "python",
            "request": "launch",
            "program": "chunker_service.py",
            "cwd": "${workspaceFolder}/src/backend/chunker",
            "env": {
                "LOG_LEVEL": "DEBUG",
                "PYTHONUNBUFFERED": "1",
                "PYTHONPATH": "${workspaceFolder}/src/backend/chunker"
            }
        }
    ]
}
